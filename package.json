{
  "name": "inmobiliaria-system",
  "version": "1.0.0",
  "description": "Sistema de gestiÃ³n inmobiliaria self-hosted optimizado para NAS",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch backend/src/index.ts",
    "build": "bun build backend/src/index.ts --outdir dist --target bun --minify",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:unit": "bun test backend/tests/unit",
    "test:integration": "bun test backend/tests/integration",
    "test:security": "bun test backend/tests/security",
    "test:performance": "bun test backend/tests/performance",
    "test:smoke": "bun run backend/tests/smoke-test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "benchmark": "bun scripts/benchmark.ts",
    "db:migrate": "bun run database/migrate.ts",
    "db:seed": "bun run database/seed.ts",
    "db:rollback": "bun run database/migrate.ts --rollback",
    "db:studio": "bunx drizzle-kit studio",
    "docker:build": "docker compose build --no-cache",
    "docker:build:fast": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f backend",
    "docker:stats": "docker stats --no-stream inmobiliaria-api inmobiliaria-db inmobiliaria-cache",
    "docker:size": "docker images inmobiliaria-system-backend --format '{{.Size}}'",
    "check:resources": "bash scripts/check-resources.sh",
    "health": "curl -s http://localhost:3000/health | jq",
    "health:detailed": "curl -s http://localhost:3000/health/detailed | jq",
    "lint": "bunx eslint . --max-warnings 0",
    "lint:fix": "bunx eslint . --fix",
    "typecheck": "bunx tsc --noEmit",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "quality": "bun run typecheck && bun run lint && bun run format:check",
    "quality:fix": "bun run lint:fix && bun run format",
    "quality:metrics": "bun run scripts/quality-metrics.ts",
    "quality:report": "bun run scripts/quality-metrics.ts --output docs/QUALITY-METRICS.md",
    "docs:serve": "bunx serve docs"
  },
  "keywords": [
    "inmobiliaria",
    "real-estate",
    "self-hosted",
    "nas",
    "bun",
    "hono",
    "postgresql",
    "sveltekit"
  ],
  "author": "Mon",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^2.0.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.29.0",
    "exif-reader": "^2.0.3",
    "hono": "^4.0.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "postgres": "^3.4.0",
    "sharp": "^0.34.5",
    "zod": "^3.22.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=22.0.0"
  }
}
